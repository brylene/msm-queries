<h1> Actor #<%= @actor.id %> details </h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/504" class="btn btn-block btn-outline-secondary">
  Delete actor
  <small>(Building this link is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @actor.image %>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@actor.created_at) %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@actor.updated_at) %>
  </dd>
</dl>

<h2>Filmography</h2>
<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>
<% @filmography.each do |actor| %>
  <tr>
    <td>
      <%= actor.id %>
    </td>
    <td>
      <img src="<%= actor.image %>"
    </td>
    <td>
      <%= actor.title %>
    </td>
    <td>
      <%= actor.year %>
    </td>
    <td>
      <%# d = Director.where({ :id => director.director_id }).at(0) %>
      <%#= d.name %>
    </td>
    <td>
      <a href="/movies %>">
        Show details
    </td>
  </tr>
<% end %>
</table>
